    <!-- project.milestone tree view -->
    <record id="project_milestone_pm_mvp_view_tree" model="ir.ui.view">
      <field name="name">project.milestone.pm_mvp.view.tree</field>
      <field name="model">project.milestone</field>
      <field name="arch" type="xml">
          <tree default_order='project_id,target_date, sequence'>
              <!-- <field name="sequence"
                      widget="handle"/> -->
              <field name="name"/>
              <field name="project_id"/>
              <field name="target_date"/>
              <field name="project_task_ids"/>
              <field name="progress"
                      widget="progressbar"/>
          </tree>
      </field>
    </record>

    <!-- project.milestone timeline -->
    <record id="project_milestone_timeline" model="ir.ui.view">
        <field name="model">project.milestone</field>
        <field name="type">timeline</field>
        <field name="arch" type="xml">
            <timeline date_start="date_start"
                      date_stop="target_date"
                      default_group_by="project_id"
                      event_open_popup="true">
              <field name="progress"/>
              <field name="milestone_budget_hours"/>
              <field name="mls_task_planned_hours"/>
              <templates>
                    <t t-name="timeline-item">
                        <div class="o_project_timeline_item">
                            <span name="display_name">
                                <t t-esc="record.display_name"/>
                            </span>
                            <small name="milestone_budget_hours" class="text-muted ml4">
                                bdg:
                                <t t-esc="record.milestone_budget_hours"/>
                                plan:
                                <!-- <t t-esc="field_utils.format.float_time(record.mls_task_planned_hours)"/> -->
                                <t t-esc="record.mls_task_planned_hours"/>
                            </small>
                        </div>
                        <div class="o_project_timeline_hr_timesheet_progress">
                            <div t-att-class="record.progress > 100 and 'danger'"
                                t-attf-style="width: #{record.progress}%" />
                        </div>
                    </t>
                </templates>
            </timeline>
        </field>
    </record>


    <!-- project.task inherit form view -->
    <record id="pm_mvp.project_task_tree2" model="ir.ui.view">
      <field name="name">project.task.inherit.view.tree</field>
      <field name="model">project.task</field>
      <field name="inherit_id" ref="project.view_task_tree2"/>
      <field name="arch" type="xml">
        <field name="project_id" position="after">
          <field name="milestone_id"/>
        </field>
      </field>
    </record>

