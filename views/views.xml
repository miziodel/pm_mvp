    <!-- project.project inherit tree view -->
    <record id="pm_mvp.project_view_list" model="ir.ui.view">
      <field name="name">project.project.inherit.view.tree</field>
      <field name="model">project.project</field>
      <field name="inherit_id" ref="project.view_project"/>
      <field name="arch" type="xml">
        <!-- <xpath expr="/tree" position="attributes">
          <attribute name="editable">Bottom</attribute>
        </xpath> -->
        <field name="name" position="after">
            <!-- <field name="date_start"/> -->
            <field name="date"/>
            <field name="project_status"/>
        </field>
        <field name="partner_id" position="after">
            <field name="activity_ids" widget="kanban_activity"/>
            <field name="activity_state" invisible="1"/>
            <button name="open_project_view" string="edit" type="object"/>
            <!-- <button name="open_tasks" string="manage" type="object"/> -->
            <button type="object" name="open_tasks" string="manage">
            </button>
        </field>
      </field>
    </record>

    <!-- model.name action window -->
    <record id="project.open_view_project_all" model="ir.actions.act_window">
      <field name="view_mode">kanban,form,activity,timeline</field>
    </record>


